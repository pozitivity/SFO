        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jms</artifactId>
            <version>${org.springframework-version}</version>
        </dependency>
 
        <!-- Jersey + Spring -->
        
        <dependency>
            <groupId>com.sun.jersey</groupId>
