        <jsf-version>2.2.3</jsf-version>
        <servlet-api-version>2.5</servlet-api-version>
    </properties>
  
  <dependencies>
    
    <!-- Spring 3 dependencies -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
           <version>3.2.3.RELEASE</version>
        </dependency>
 
       <dependency>
            <groupId>org.springframework</groupId>
